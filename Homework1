#Part 2

class dessert
  puts("Please enter a name")
  chomp($name=stdin)
  puts("Please enter number of calories")
  chomp(int $calories)
  
  healthy?($calories)
end
def healthy? calories
  if calories <= 200
    true
  else
    false
  end  
def delecious?
  if flavor != "licorice"
    true
  else
    false
  end  
end
class jellybean < dessert
  puts("Plese enter a flavor")
  chomp($flavor=stdin)
  $calories=5
  $name = $flavor+ "jellybean"
end

#PART 3
class rockPaperScissors
  $j=2
  for i in $j
  puts("Please enter your name")
  chomp($name=stdin)
  puts("Please enter an R, P, or S")
  chomp.downcase($value=stdin)
  if value == "r"or"p"or"s"
     myAry=Array.new(2)
     myAry[i] = Array.new(name, value)
  else
    puts("NoSuchStrategy")
  end
  def theWinner winner
    case[myAry(0,1),myAry(1,1)]
      when ['r','r'],['s','s'],['p','p'],['s','p'],['r','s'],['p','r']
        $winner = myAry[0]
      else
        $winner = myAry[1]
      end  
    puts("The winner is", winner)
  end
    
end
end  

class tournament < rockPaperScissors
  rockPaperScissors
  $winner1 = winner
  rockPaperScissors
  $winner2 = winner
  myAry[0] = ($winner1)
  myAry[1] = ($winner2)
  theWinner
  $winnerA = winner
  rockPaperScissors
  $winner1 = winner
  rockPaperScissors
  $winner2 = winner
  theWinner
  $winnerB = winner
  myAry[0] = ($winnerA)
  myAry[1] = ($winnerB)
  theWinner
  $champion = winner
  puts("The champion is", $champion)
end
