end

def starts_with_consonant? s
  print("Please enter a string")
  chomp($string = stdin)
  if $string[0] =~ "b" or "B" or "c" or "C" or "d" or "D" or "f" or "F" or "g" or "G" or "h" or "H" or "j" or "J" or "k" or "K" or "l" or "L" or "m" or "M" or "n" or "N" or "p" or "P" or "q" or "Q" or "r" or "R" or "s" or "S" or "S" or "t" or "T" or "v" or "V" or "w" or "W" or "x" or "X" 
    {
      $s = true;
      }
    else
    {
      $s = false
      }
    print(s)
end

