def sum arr
  $i = 0
  $j = 0
  $temp = 0
  print("Please enter a value for your array, enter -99 when finished")
  chomp($temp = stdin)
  #chomp($temp = <stdin>)
  while ($temp != -99) 
      
      @nums[$i] = ($temp);
      i++
      print("Please enter a value for your array, enter -99 when finished")
  end
  
  nums.each {|i| $j+=@nums[i]}  # check by printing j
  for i in @nums.len
      $j += @nums[$i];
  end     
  
end

def max_2_sum arr
  $i = 0
  $Max1 = 0
  $Max2 = 0
  $sum = 0
  $temp = 0
  print("Please enter a value for your array, enter -99 when finished")
  chomp($temp = stdin)
  while ($temp != -99)
    
      @nums[$i] = ($temp);
      if($temp >= $Max1)
        
          $Max2 = $Max1
          $Max1 = $temp
      end
      i++
      print("Please enter a value for your array, enter -99 when finished")
  end
  $sum = $Max1 = $Max2
  print("The sum of the two highest array values is", $sum)    
end

def sum_to_n? arr, n
  $i = 0
  $j = 0
  print("Please enter a value for n.")
  chomp($n = stdin)
  print("Please enter a value for your array, enter -99 when finished")
  chomp($temp = stdin)
  while ($temp != -99)
    
      @nums[$i] = ($temp);
      $i++
      print("Please enter a value for your array, enter -99 when finished")
  end
      
   for i in @nums.len
   
       for j in @nums.len
         {
           $k = @nums[$i]+@nums[$j]
           if ($k == $n)
            
             print("sum = n")
          end
             
            }
    end   
  
end

